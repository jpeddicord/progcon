{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "lib": [
      "dom",
      "es2016"
    ],
    "outDir": "build/",
    "sourceMap": false,
    "allowJs": true,
    "jsx": "react",
    "noImplicitAny": true,
    "strictNullChecks": true
  },
  "include": [
    "server/**/*.ts",
    "server/config.js",
    "browser/**/*.ts",
    "browser/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
