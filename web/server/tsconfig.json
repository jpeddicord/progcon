    "module": "commonjs",
    "target": "es6",
    "lib": [
      "dom",
      "es2016"
    ],
    "outDir": "../build/server",
    "sourceMap": true,
    "allowJs": true,
    "noImplicitAny": false,
    "strictNullChecks": false
  },
  "include": [
    "**/*.ts",
    "config.js"
  ],
  "exclude": [
    "node_modules"
  ]
}
